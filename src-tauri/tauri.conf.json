{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "win-audio-control",
  "version": "0.2.0",
  "identifier": "de.smarti.srv64.de.winaudiocontrol",
  "build": {
    "frontendDist": "../dist/spa",
    "devUrl": "http://localhost:9000",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Win Audio Control",
        "width": 700,
        "height": 400,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
